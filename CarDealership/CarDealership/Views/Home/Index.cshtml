@model IndexViewModel

@{
    ViewData["Title"] = "Welcome";
}

@{
    var firstCar = Model.Cars.Any() ? Model.Cars[0] : null;
    var secondCar = Model.Cars.Count() > 1 ? Model.Cars[1] : null;
    var thirdCar = Model.Cars.Count() > 2 ? Model.Cars[2] : null;
}

@if (!Model.Cars.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to car renting system!</h1>
        <p class="lead">There are currently no cars, but you can add one!</p>
        <hr class="my-4">
        <p class="lead">
            <a class="btn btn-primary btn-lg" asp-controller="Cars" asp-action="Add" role="button">Add Car</a>
        </p>
    </div>
}



<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstCar.ImageUrl" alt="@firstCar.Brand @firstCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id" class="btn btn-primary">Details</a></h5>
                </div>
            </div>
        }
        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondCar.ImageUrl" alt="@secondCar.Brand @secondCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id" class="btn btn-primary">Details</a></h5>
                </div>
            </div>
        }
        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdCar.ImageUrl" alt="@thirdCar.Brand @thirdCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id" class="btn btn-primary">Details</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalCars Cars
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalRents Rents
        </h2>
    </div>   
</div>
